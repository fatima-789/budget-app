<!-- res/drawable/rounded_square.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" /> <!-- Match the corner radius -->
            <gradient
                android:startColor="#00000000"
                android:centerColor="#000"
                android:endColor="#22000000"
                android:angle="300"/>             <!-- Angle for shadow direction -->
            <padding
                android:bottom="2dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>

    <!-- Main rounded rectangle layer -->
    <item android:top="0dp" android:bottom="6dp"> <!-- Offset the main shape for shadow effect -->
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="#FFFFFF" /> <!-- Your main background color -->
        </shape>
    </item>

</layer-list>
