<!-- res/drawable/rounded_square.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Main rounded rectangle shape as the frame -->
    <item>
        <shape android:shape="rectangle">
            <!-- Define rounded corners for the shape -->
            <corners android:radius="50dp" />
            <!-- Background color for the shape -->
            <solid android:color="#77374BA9" />
        </shape>
    </item>

    <!-- Image layer placed inside the rounded rectangle -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <bitmap
            android:src="@drawable/pattern_bg"
            android:gravity="fill"
            android:tileMode="repeat" />
    </item>

</layer-list>
